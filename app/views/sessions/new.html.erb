<% provide(:title, "Log in") %>

<div class="signin-page">
  <div class="signin-upper">
    <div class="row signin-upper-up text-center">
      <div>アカウントをお持ちでない方はこちら</div>
      <a href="/signup_page", class="signup_btn">
        <div class="btn btn-default btn-lg">新規会員登録</div>
      </a>
    </div>
    <div class="signin-upper-down">
      <div class="row text-center">
        <a href="/auth/facebook", class="signup_btn">
          <div class="btn btn-primary btn-lg">Facebookでログイン</div>
        </a>
      </div>
      <div class="row text-center">
        <a href="/auth/google_oauth2", class="signup_btn">
          <div class="btn btn-danger btn-lg">Googleでログイン</div>
        </a>
      </div>
    </div>
  </div>

  <%= form_for(:session, url: login_path) do |f| %>
    <div class="row">
      <div class="form-group form-group-lg signin-form">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: 'form-control input-lg' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group signin-form">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, class: 'form-control input-lg' %>
        <%= link_to "パスワードを忘れた方", new_password_reset_path %>
      </div>

    </div>
    <div class="row text-center">
      <%= f.label :remember_me, class: "" do %>
        <%= f.check_box(:remember_me, {id: "checkbox01"}) %>
        <label for="checkbox01" class="checkbox">ログイン状態を保持する</label>
      <% end %>
    </div>
    <div class="row text-center">
      <%= f.submit "ログイン", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
</div>
