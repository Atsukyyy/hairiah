<h1>カットモデル募集投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@micropost) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :content, "内容" %>
        <%= f.text_field :content, class: 'form-control' %>
      </div>
        <script>
          $(function() {
            $('#micropost_prefecture_id').change(function() {
              var prefecture_id = $("#micropost_prefecture_id").val();
              if (prefecture_id !== "") {
                $.get("<%= prefectures_areas_path %>",
                  { prefecture_id: prefecture_id },
                  function(data){ }
                );
              }
            });
          });
        </script>

        <div class="form-check form-check-inline">
          <%= f.label :prefecture_id, "都道府県" %>
          <span class="required">※必須</span>
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, class: 'form-control' %>
        </div>

        <div class="form-check form-check-inline">
          <%= f.label :area_id, "市区町村" %>
          <span class="required">※必須</span>
          <%= f.collection_select :area_id, Area.all, :id, :name, {}, class: 'form-control' %>
        </div>

        <div class="form-row">
          <div class="form-group col-md-2">
            <%= f.label :color, "カラー希望" %>
            <%= f.check_box(:color, {:checked=> false}, "希望", "なし") %>
          </div>
          <div class="form-group col-md-2">
            <%= f.label :hair_extension, "エクステ希望" %>
            <%= f.check_box(:hair_extension, {:checked=> false}, "希望", "なし") %>
          </div>
          <div class="form-group col-md-2">
            <%= f.label :hair_extension, "メンズ希望" %>
            <%= f.check_box(:hair_extension, {:checked=> false}, "希望", "なし") %>
          </div>
          <div class="form-group col-md-2">
            <%= f.label :reason, "理由" %>
            <%= f.radio_button :reason, "練習" %>練習
            <%= f.radio_button :reason, "練習兼サロンモデル募集" %>練習兼サロンモデル募集
          </div>
        </div>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
