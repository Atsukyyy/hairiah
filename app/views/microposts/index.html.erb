<div class="post-container">
  <div class="row">
    <% if current_user.present? && current_user.staff == true %>
      <%= link_to "投稿する", new_micropost_path %>
    <% end %>
  </div>
  <% @microposts.each do |micropost| %>
    <div class="row">
      <table class="table table-striped table-bordered table-hover table-condensed">
    		<thead>
    			<tr class="info">
    				<th colspan="4">
              <%= micropost.content %> <%= link_to "詳細情報を見る", micropost_path(micropost) %>
    				</th>
    			</tr>
    		</thead>
        <tbody>
          <td colspan="4">
            ここに内容が入る
          </td>
        </tbody>
    		<tbody>
          <tr>
          <th class="">登録日</th>
          <td class=""><%= micropost.created_at_to_date %></td>
          <th class="">募集終了日</th>
          <td class="">-</td>
          </tr>
          <tr>
          <th>場所</th>
          <td class=""><%= micropost.prefecture.name %> <%= micropost.area.name %></td>
          <th class="">得意スタイル</th>
          <td class="">-</td>
          </tr>
          <tr>
          <th>投稿者</th>
          <td class=""><%= link_to micropost.user.name, user_path(micropost.user) %></td>
          <th class="">目的</th>
          <td class=""><%= micropost.reason %></td>
          </tr>
          <tr>
          <th>カラー</th>
          <td class=""><%= micropost.color %></td>
          <th class="">エクステ</th>
          <td class=""><%= micropost.hair_extension %></td>
          </tr>

        </tbody>
      </table>
    </div>
  <% end %>
</div>
