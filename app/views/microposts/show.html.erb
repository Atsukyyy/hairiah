<div class="row">
  <table class="table table-striped table-bordered table-hover table-condensed">
		<thead>
			<tr class="info">
				<th colspan="4">
          題名
				</th>
			</tr>
		</thead>
		<tbody>
      <tr>
      <th>登録日</th>
      <td class=""><%= @micropost.created_at_to_date %></td>
      <td class="">募集終了日</td>
      <td class="">-</td>
      </tr>
      <tr>
      <th>場所</th>
      <td class=""><%= @micropost.prefecture.name %> <%= @micropost.area.name %></td>
      <td class="">得意スタイル</td>
      <td class="">-</td>
      </tr>
      <tr>
      <th>投稿者</th>
      <td class=""><%= @micropost.user.name %></td>
      <td class="">-</td>
      <td class="">-</td>
      </tr>
      <tr>
      <th>カラー</th>
      <td class=""><%= @micropost.color %></td>
      <td class="">エクステ</td>
      <td class=""><%= @micropost.hair_extension %></td>
      </tr>

    </tbody>
  </table>
</div>

<div class="row">
  <% if current_user.present? && current_user.staff == true %>
  <% @applies.zip(@users).each do |apply, user| %>
    <%= link_to user.name, user_path(user) %>
    <%= apply.memo %>
  <% end %>
  <% elsif%>
    <%= link_to "応募する", new_micropost_apply_path(params[:id]) %>
  <% end %>
</div>
