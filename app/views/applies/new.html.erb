<h1>カットモデル募集投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@micropost, @apply]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :memo %>
      <%= f.text_field :memo, class: 'form-control' %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
